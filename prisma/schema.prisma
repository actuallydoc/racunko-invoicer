model Company {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    name      String
    address   String
    city      String
    zip       String
    country   String
    phone     String
    email     String
    website   String?
    vat       String
    invoices  Invoice[]
    services  String?
    partners  Partner[]
    User      User?     @relation(fields: [userId], references: [id])
    userId    String?
}

model Partner {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    name      String
    address   String
    city      String
    zip       String
    country   String
    phone     String
    email     String
    website   String?
    vat       String?
    invoices  Invoice[]
    services  String?
    companies Company[]
    User      User?     @relation(fields: [userId], references: [id])
    userId    String?
}
